{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Clean-Linux",
            "command": "clear",
        },
        {
            "label": "Delete-Build-Dir-Linux",
            "command": "rm -rf ${workspaceRoot}/build/*",
            "dependsOn": [
                "Clean-Linux"
            ]
        },
        {
            "label": "Make-Build-Dir-Linux",
            "command": "mkdir -p ${workspaceRoot}/build/",
            "dependsOn": [
                "Delete-Build-Dir-Linux"
            ]
        },
        {
            "label": "Build-Linux",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-std=c++11",
                "-fexceptions",
                "-DDEBUG",
                "-DLINUX",
                "../src/*.cpp",
                "-I./../include",
                "-L./../lib/x86/Debug",
                "-lglfw3",
                "-lvulkan-1",
                "-o",
                "VkDemo"
            ],
            "dependsOn": [
                "Make-Build-Dir-Linux"
            ]
        },
        {
            "label": "Clean-Windows",
            "command": "cls",
        },
        {
            "label": "Delete-Build-Dir-Windows",
            "command": "if (Test-Path \"${workspaceRoot}\\build\") { Remove-Item \"${workspaceRoot}\\build\" -Force -Recurse } ",
            "dependsOn": [
                "Clean-Windows"
            ]
        },
        {
            "label": "Make-Build-Dir-Windows",
            "command": "mkdir",
            "args": [
                "${workspaceRoot}\\build"
            ],
            "dependsOn": [
                "Delete-Build-Dir-Windows"
            ]
        },
        {
            "label": "Build-Windows",
            "options": {
                "cwd": "${workspaceRoot}\\build"
            },
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-std=c++11",
                "-fexceptions",
                "-DDEBUG",
                "-DWINDOWS",
                "..\\src\\*.cpp",
                "-I.\\..\\include",
                "-L.\\..\\lib\\x86\\Debug",
                "-lglfw3dll",
                "-lvulkan-1",
                "-o",
                "VkDemo.exe"
            ],
            "dependsOn": [
                "Make-Build-Dir-Windows"
            ]
        },
        {
            "label": "Post-Build-Windows",
            "options": {
                "cwd": "${workspaceRoot}\\build"
            },
            "command": "xcopy ${workspaceRoot}\\lib\\x86\\Debug\\*.dll .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build-Windows"
            ]
        }
    ]
}